{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "packages": {
    ".": {
      "package-name": "dna",
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "extra-files": [
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.package.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies.dna.version"
        }
      ]
    },
    "plugins/core": {
      "release-type": "simple",
      "component": "dna-core-skills",
      "package-name": "dna-core-skills",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "extra-files": [
        {
          "type": "json",
          "path": "plugin.json",
          "jsonpath": "$.version"
        }
      ]
    },
    "plugins/intent": {
      "release-type": "simple",
      "component": "dna-intent-skills",
      "package-name": "dna-intent-skills",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "extra-files": [
        {
          "type": "json",
          "path": "plugin.json",
          "jsonpath": "$.version"
        }
      ]
    },
    ".claude-plugin": {
      "release-type": "simple",
      "component": "dna-marketplace",
      "package-name": "dna-marketplace",
      "skip-github-release": true,
      "extra-files": [
        {
          "type": "json",
          "path": "marketplace.json",
          "jsonpath": "$.metadata.version"
        }
      ]
    }
  }
}
